<%= link_to user_path(user.id) ,remote: true do %>
<li class="talk-room">
  <div class="talk-room-detail">
    <div class="user-image">
    <%= image_tag user.avatar.url(:thumb) ,class: "user-thumb" %>
    </div>
    <div class="user-info">
      <div class="user-name"><%= user.name %></div>
    </div>
  </div>
</li>
<% end %>
